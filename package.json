{
  "name": "waldon",
  "version": "1.0.0",
  "description": "waldon website",
  "author": "Conor Dockry <conordockry@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "xo",
    "deploy": "NODE_ENV=production now",
    "dev": "node server.js",
    "build": "NODE_ENV=production next build",
    "start": "NODE_ENV=production node server.js"
  },
  "dependencies": {
    "module-alias": "2.2.0",
    "next": "8.0.3",
    "preact": "8.4.2",
    "preact-compat": "3.19.0",
    "react": "16.8.3",
    "react-dom": "16.8.3",
    "react-ga": "2.5.7"
  },
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "babel-plugin-transform-decorators-legacy": "1.3.5",
    "eslint-config-xo-react": "0.18.0",
    "eslint-plugin-class-property": "1.1.0",
    "eslint-plugin-react": "7.12.4",
    "xo": "0.24.0"
  },
  "now": {
    "alias": [
      "waldonmanagement.com",
      "www.waldonmanagement.com"
    ]
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": "xo-react",
    "envs": [
      "browser",
      "es6"
    ],
    "plugins": [
      "class-property"
    ],
    "semicolon": false,
    "rules": {
      "no-var": "error",
      "capitalized-comments": "off",
      "prefer-const": "error",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "operator-linebreak": [
        "error",
        "after",
        {
          "overrides": {
            "?": "before",
            ":": "before"
          }
        }
      ],
      "jsx-quotes": [
        "error",
        "prefer-single"
      ],
      "react/jsx-closing-bracket-location": [
        1,
        {
          "selfClosing": "after-props",
          "nonEmpty": "after-props"
        }
      ],
      "react/react-in-jsx-scope": "off"
    }
  }
}
