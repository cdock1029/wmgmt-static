{
  "name": "waldon",
  "version": "1.0.0",
  "description": "waldon website",
  "author": "Conor Dockry <conordockry@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "xo",
    "dev": "node server.js",
    "build": "NODE_ENV=production next build",
    "start": "NODE_ENV=production node server.js"
  },
  "dependencies": {
    "module-alias": "^2.0.0",
    "next": "^2.3.1",
    "preact": "^8.1.0",
    "preact-compat": "^3.15.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "eslint-config-xo-react": "^0.11.1",
    "eslint-plugin-class-property": "^1.0.6",
    "eslint-plugin-react": "^6.10.3",
    "xo": "^0.18.1"
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": "xo-react",
    "envs": [
      "browser",
      "es6"
    ],
    "plugins": [
      "class-property"
    ],
    "semicolon": false,
    "rules": {
      "no-var": "error",
      "capitalized-comments": "off",
      "prefer-const": "error",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "operator-linebreak": [
        "error",
        "after",
        {
          "overrides": {
            "?": "before",
            ":": "before"
          }
        }
      ],
      "jsx-quotes": [
        "error",
        "prefer-single"
      ],
      "react/jsx-closing-bracket-location": [
        1,
        {
          "selfClosing": "after-props",
          "nonEmpty": "after-props"
        }
      ],
      "react/react-in-jsx-scope": "off"
    }
  }
}
